{% extends 'admin/layouts/index.html.twig' %}
{% from 'admin/component.html.twig' import navigate,input %}

{% block content %}
    {% set _content %}
        <div class="row">
            <div class="col-12">
                {{ input("Nom","_name",{value:error ? error.name : maintainer.name,required:true,focus:true}) }}
            </div>
            <div class="col-12">
                {{ input("Contact","_contact",{value:error ? error.name : maintainer.contact,required:true,type:'tel'}) }}
            </div>
        </div>
    {% endset %}
    {% embed "admin/components/insert-view.html.twig" with {method:'put',csrf:'_user_maintainer_update'} %}
        {% block body %} {{ _content }} {% endblock %}
    {% endembed %}
{% endblock %}

{% block title %}
    Maintenancier
{% endblock %}
{% block navigate %}
    {{ navigate([{url:path('admin_home.index'),label:'Accueil'},{url:path('maintainer.index'),label:'Maintenancier'},{url:path('maintainer.edit',{id:maintainer.id}),label:'Edition'}]) }}
{% endblock %}