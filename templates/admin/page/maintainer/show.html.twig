{% extends 'admin/layouts/index.html.twig' %}
{% from 'admin/component.html.twig' import navigate,text,dateView %}


{% block content %}
    {% set _body %}
        <div class="row">
            <div class="col-12">
                {{ text("Nom",maintainer.name) }}
            </div>
            <div class="col-12">
                {{ text("Contact",maintainer.contact) }}
            </div>
        </div>
        {{ dateView(maintainer) }}
    {% endset %}

    {% embed "admin/components/display-view.html.twig" with {edit:path('maintainer.edit',{id:maintainer.id}),delete:{url:path('maintainer.destroy',{id:maintainer.id})}} %}
        {% block body %} {{ _body }} {% endblock %}
    {% endembed %}
{% endblock %}

{% block title %}
    Information
{% endblock %}
{% block navigate %}
    {{ navigate([{url:path('admin_home.index'),label:'Accueil'},{url:path('maintainer.index'),label:'Maintenanciers'},{url:path('maintainer.show',{id:maintainer.id}),label:'Informations'}]) }}
{% endblock %}